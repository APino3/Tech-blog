<div class="comments">
  {{#each this}}
    <section class="comment">
      <div class="meta">
        {{user.username}}
        on
        {{format_date created_at}}
      </div>
      <div class="text">
        {{comment_text}}
      </div>
      <div class="button">
        <button
          type="button"
          class="delete-comment-btn"
          onclick="deleteComment({{this.id}})"
        >Delete</button>
      </div>
    </section>
  {{/each}}
</div>